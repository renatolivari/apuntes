var hruido =function(){
  console.log("HOLA")
};
hRuido();
// MENSAJE = HOLA

var potencia = function(x,y){
var resultado = 1;
for(var contador=0;contador<y;contador++)
  resultado *= x;
  return resultado;
};
console.log(potencia(2,10));
